if [ -e "${DIR_SCRIPT}/prelibrary" ]; then source ${DIR_SCRIPT}/prelibrary;
else source ${proFILEdir}/tools/prelibrary; fi
#user setting
account=vc.integrator
path_mirror="/data001/${account}"/mirror
rm -f ${file_error}


##--------------------------- Menu Functions --------------------------------
